<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="create_person_table" author="Krystian">
        <createTable tableName="person">
            <column name="id" type="bigint" autoIncrement="true">
                    <constraints primaryKey="true" nullable="false"/>
        </column>
            <column name="name" type="varchar(30)" >
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(40)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(60)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="national_identity_number" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="date_of_birth" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="gender" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="identity_card_id" type="BIGINT">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="address_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="phone_number" type="varchar(9)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="identity_card">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="identity_card_number" type="varchar">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="issue_place" type="varchar(60)">
                <constraints nullable="false"/>
            </column>
            <column name="issuing_authority" type="varchar(60)">
                <constraints nullable="false"/>
            </column>
            <column name="valid_until" type="date">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="address">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="city" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="postal_code" type="varchar(6)">
                <constraints nullable="false"/>
            </column>
            <column name="street" type="varchar(60)">
                <constraints nullable="false"/>
            </column>
            <column name="apartment_number" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="person" 
                                 baseColumnNames="identity_card_id" 
                                 constraintName="fk_person_identity_card"
                                 referencedTableName="identity_card"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="person" 
                                 baseColumnNames="address_id" 
                                 constraintName="fk_person_address"
                                 referencedTableName="address"
                                 referencedColumnNames="id"/>

        <createTable tableName="account">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="person_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="account_number" type="VARCHAR(26)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="primary_account" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="balance" type="DECIMAL(19,2)" defaultValueNumeric="0.00">
                <constraints nullable="false"/>
            </column>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="soft_deleted" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="account_opened_at" type="DATE" defaultValueComputed="CURRENT_DATE">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="transfer">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="from_account_number" type="varchar(26)">
                <constraints nullable="false"/>
            </column>
            <column name="to_account_number" type="varchar(26)">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="decimal">
                <constraints nullable="false"/>
            </column>
            <column name="date_transfer" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="account"
                                 baseColumnNames="person_id"
                                 constraintName="fk_account_person"
                                 referencedTableName="person"
                                 referencedColumnNames="id"/>

    </changeSet>
</databaseChangeLog>
